<script>
    function addToCart(id) {
        let cart = getCookie('cart');
        const prod = { id, quantity: 1 };
        if (cart) {
            cart = JSON.parse(cart);
            const index = cart.findIndex(x => x.id === id);
            if (index !== -1) {
                cart[index].quantity++;
            } else {
                cart.push(prod);
            }
        } else {
            cart = [prod];
        }
        setCookie('cart', JSON.stringify(cart), 10);
        updateCartNotify();
    }

    function updateCartNotify() {
        let cart = getCookie('cart');
        cart = cart ? JSON.parse(cart) : [];
        const cartNotify = document.getElementById('cartNotify');
        cartNotify.style.display = cart.length ? 'block' : 'none';
        const sum = cart.reduce((accumulator, c) => accumulator + c.quantity, 0);
        cartNotify.innerHTML = sum;
    }

    function setCookie(cname, cvalue, exdays) {
        const d = new Date();
        d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
        let expires = "expires=" + d.toUTCString();
        document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }

    function getCookie(cname) {
        let name = cname + "=";
        let decodedCookie = decodeURIComponent(document.cookie);
        let ca = decodedCookie.split(';');
        for (let i = 0; i < ca.length; i++) {
            let c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }

    document.addEventListener("DOMContentLoaded", () => {
        updateCartNotify();
    });
</script>
